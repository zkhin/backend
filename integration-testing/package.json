{
  "name": "integration-testing",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^14"
  },
  "scripts": {
    "lint": "eslint '**/*.js'",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest -c ./jest.config.json",
    "test-all": "yarn run test-concurrent; r1=$?; yarn run test-sequential; r2=$?; [[ $r1 -eq 0 && $r2 -eq 0 ]] && true || false",
    "test-concurrent": "NODE_OPTIONS=--experimental-vm-modules jest --silent -c ./jest.concurrent.config.json",
    "test-sequential": "NODE_OPTIONS=--experimental-vm-modules jest --silent -c ./jest.sequential.config.json"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "plugins": [
      "jest"
    ],
    "rules": {
      "jest/no-conditional-expect": "off",
      "jest/no-disabled-tests": "off",
      "jest/no-standalone-expect": [
        "error",
        {
          "additionalTestBlockFunctions": [
            "beforeAll",
            "beforeEach",
            "afterEach",
            "afterAll"
          ]
        }
      ]
    }
  },
  "prettier": {
    "bracketSpacing": false,
    "printWidth": 114,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {},
  "devDependencies": {
    "aws-appsync": "^4.0.3",
    "aws-sdk": "^2.899.0",
    "callsites": "^3.1.0",
    "cross-fetch": "^3.1.4",
    "dayjs": "^1.10.5",
    "dotenv": "^8.2.0",
    "elasticsearch": "^16.7.2",
    "es6-promise": "^4.2.8",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "exif-reader": "^1.0.3",
    "generate-password": "^1.6.0",
    "got": "^11.8.2",
    "graphql-tag": "^2.12.4",
    "http-aws-es": "^6.0.0",
    "jest": "^27.0.3",
    "jpeg-js": "^0.4.3",
    "jwt-decode": "^3.1.2",
    "md5": "^2.3.0",
    "prettier": "^2.2.1",
    "prompt": "^1.1.0",
    "request-image-size": "^2.2.0",
    "sharp": "^0.28.1",
    "tough-cookie": "^4.0.0",
    "uuid": "^8.3.2",
    "ws": "^7.4.6"
  }
}
